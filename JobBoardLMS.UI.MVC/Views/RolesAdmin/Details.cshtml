@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
}
<div class="banner-w3pvt-info second">
    <div class="overlay-w3ls second">
        <p class="col-lg-12 headerText" style="text-align:center">@ViewBag.Title</p>
    </div>
</div>
<div style="text-align:center">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<h4 style="text-align:center">List of users in this role</h4>
@if (ViewBag.UserCount == 0)
{
    <p>No users found in this role.</p>
}

<table class="table" style="text-align:center">

    @foreach (var item in ViewBag.Users)
    {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
<p style="text-align:center">
    <button> @Html.ActionLink("Edit", "Edit", new { id = Model.Id })</button>
    <button>@Html.ActionLink("Back to Roles", "Index")</button>
</p>



